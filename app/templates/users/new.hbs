<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    {{#if errors.messages}}
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains {{errors.messages.length}} errors.
      </div>
      {{#each error in errors.messages}}
        <ul>
          <li>{{error.attribute}} {{error.message}}</li>
        </ul>
      {{/each}}
    </div>
    {{/if}}

    <form class="form-basic" role="form" {{action 'createUser' on='submit'}}>
      <label for="user_name">Name</label>
      {{input class="form-control" type="text" id="user_name" value=name size="50"}}

      <label for="user_email">Email</label>
      {{input class="form-control" type="text" id="user_email" value=email size="50"}}

      <label for="user_password">Password</label>
      {{input class="form-control" type="password" id="user_password" value=password size="50"}}

      <label for="user_password_confirmation">Confirmation</label>
      {{input class="form-control" type="password" id="user_password_confirmation" value=passwordConfirmation size="50"}}

      <input type="submit" value="Create my account" class="btn btn-primary">
    </form>
  </div>
</div>
